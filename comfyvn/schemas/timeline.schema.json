{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "ComfyVN Timeline",
  "type": "object",
  "required": [
    "world_id",
    "epochs"
  ],
  "properties": {
    "world_id": {
      "type": "string"
    },
    "epochs": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "id",
          "label"
        ],
        "properties": {
          "id": {
            "type": "string"
          },
          "label": {
            "type": "string"
          },
          "start": {
            "type": [
              "string",
              "null"
            ]
          },
          "end": {
            "type": [
              "string",
              "null"
            ]
          },
          "notes": {
            "type": [
              "string",
              "null"
            ]
          }
        }
      }
    }
  }
}